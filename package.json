{
  "name": "fleet-commander",
  "version": "1.0.0",
  "main": "src/electron.js",
  "build": {
    "appId": "com.dennisokeeffe",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "build": "rm -rf build/ .cache dist/ && NODE_ENV=prod parcel build src/index.html",
    "clean-build": "rm -rf build/ .cache dist/",
    "parcel-build": "npm run clean-build && NODE_ENV=prod parcel build src/index.html --out-dir build",
    "electron-build": "electron-builder -m",
    "full-build": "npm run parcel-build && npm run electron-build"
  },
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "pixi-cull": "^1.0.0",
    "pixi-filters": "^3.1.1",
    "pixi-viewport": "^4.15.0",
    "pixi.js": "^5.3.3",
    "socket.io": "^3.0.4",
    "socket.io-client": "^3.0.4",
    "stats.js": "^0.17.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "parcel-bundler": "^1.12.4",
    "wait-on": "^5.2.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  }
}
